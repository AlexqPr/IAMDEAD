<Window x:Class="TextRedactorMVVMNew.View.Shrifts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextRedactorMVVMNew.View"
        mc:Ignorable="d"
        Title="Shrifts" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Arial"  Command="{Binding Arial}"/>
        <Button Content="Times New Roman"  Grid.Column="1" Command="{Binding TimesNR}"/>
        <Button Content="Calibri" Grid.Row="1"  Command="{Binding Calibri}"/>
        <Button Content="Еще один Arial" Grid.Column="1" Grid.Row="1"  Command="{Binding Arial}"/>
    </Grid>
</Window>
